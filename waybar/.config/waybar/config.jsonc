{
  // General settings
  "layer": "top",
  "position": "top",
  "reload_style_on_change": true,
  // Module settings
  "modules-left": [
    "hyprland/workspaces",
    "wlr/taskbar",
    "mpris"
  ],
  "modules-center": [
    "custom/arrow1",
    "clock",
    "custom/arrow2"
  ],
  "modules-right": [
    "disk",
    "temperature",
    "pulseaudio",
    "pulseaudio/slider",
    "network",
    "battery",
    "custom/updates",
    "custom/logout"
  ],
  // Workspaces
  "hyprland/workspaces": {
    "format": "<span weight='bold'>{name}</span>",
    "sort-by-number": true,
    "on-click": "activate"
  },
  // Taskbar
  "wlr/taskbar": {
    "all-outputs": false,
    "active-first": false,
    "on-click": "activate",
    "format": "{icon}",
    "tooltip": "{name}",
    "icon-size": 12
  },
  "mpris": {
    "format": "{status_icon} {dynamic}",
    "tooltip-format": "{player} ({status}) {dynamic}",
    "interval": 1,
	  "format-paused": "{status_icon} <i>{dynamic}</i>",
	  "player-icons": {
		  "default": "‚ñ∂",
		  "mpv": "üéµ",
      "spotify": "ÔÜº",
      "firefox": "ÓùÖ"
	  },
	  "status-icons": {
      "playing": "‚ñ∂",
		  "paused": "ÔÅå"
	  },
    "dyanamic-order": [
      "title",
      "artist",
      "position",
      "length",
      "album"
    ],
    "dynamic-importance-order": [
      "title",
      "artists",
      "position",
      "length",
      "album"
    ],
    "dynamic-len": 40,
    "title-len": 25,
    "author-len": 15
  },
  // Clock
  "clock": {
    "format": "<span weight='bold'>{:%a, %b %d %Y, %H:%M:%S}</span>",
    "interval": 1,
    "tooltip": false
  },
  // Disk
  "disk": {
    "format": "ÔÇ† ({used})",
    "unit": "GiB",
    "path": "/home",
    "interval": 30,
    "tooltip": true,
    "tooltip-format": "{used} used out of {total} on {path} ({percentage_used}%)"
  },
  // Temperature
  "temperature": {
    "format": "{icon} ({temperatureC}¬∞C)",
    "format-critical": "<span color='#FF2400'>Ôãá</span> ({temperatureC}¬∞C)",
    "interval": 1,
    "critical-threshold": 80,
    "format-icons": ["<span color='#1F51FF'>Ôãã</span>",
                     "<span color='#5746BF'>Ôãä</span>",
                     "<span color='#8F3B80'>Ôãâ</span>",
                     "<span color='#C72F40'>Ôãà</span>"]
  }, 
  // Pulseaudio
  "pulseaudio": {
    "format": "{icon}",
    "tooltip": true,
    "tooltip-format": "{desc} ({volume}%)",
    "format-bluetooth": "{icon}Û∞ÇØ",
    "format-muted": "Óª®",
    "format-icons": {
      "headphone": "ÔÄ•",
      "default": ["ÔÄß","ÔÄ®"]
    }
  },
  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
  },
  // Network
  "network": {
    "format-wifi": "Ôá´  {essid}",
    "format-ethernet": "Óºâ  {ifname}",
    "format-disconnected": "Ó¨Å",
    "tooltip-format": "{essid} ({signalStrength}%) | {ipaddr}"
  },
  // Battery
  "battery": {
    "interval": 1,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 10
    },
    "format": "{icon} ({capacity}%)",
    "format-charging": "<span color='#DAA520'>Û∞ÇÑ</span>({capacity}%)",
    "format-plugged": "<span color='#355E3B'>Ôá¶ </span>({capacity}%)",
    "format-alt": "{time} {icon}",
    "format-icons": [
      "<span color='#FF2400'>Û∞Åª</span>",
      "<span color='#FF2400'>Û∞Åº</span>",
      "<span color='#FF2400'>Û∞Åæ</span>",
      "<span color='#355E3B'>Û∞ÇÄ</span>",
      "<span color='#355E3B'>Û∞ÇÇ</span>",
      "<span color='#355E3B'>Û∞Åπ</span>"
    ]
  },
  // Updates
  "custom/updates": {
    "format": "ÔÄô {}",
    "tooltip": false,
    "escape": true,
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/count_updates.sh",
    "restart-interval": 60
  },
  // Logout
  "custom/logout": {
    "format": "<span weight='bold'>ÔÄë</span>",
    "tooltip": false,
    "on-click": "wlogout"
  },
  // Arrows
  "custom/arrow1": {
    "format": "ÓÇ≤",
    "tooltip": false
  },
  "custom/arrow2": {
    "format": "ÓÇ∞",
    "tooltip": false
  }
}
